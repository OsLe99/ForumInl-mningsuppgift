@page
@model ForumInlämningsuppgift.Pages.AdminPages.Categories.CategoryListModel
@{
}
<h2>Categories</h2>

<a asp-page="CreateCategory" class="btn btn-primary mb-2">Create New Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model.Categories)
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.Description</td>
                <td>
                    <a asp-page="EditCategory" asp-route-id="@cat.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <form method="post" asp-page="DeleteCategory" asp-route-id="@cat.Id" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>